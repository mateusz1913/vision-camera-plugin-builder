{
  "name": "vision-camera-plugin-builder",
  "version": "0.3.0",
  "description": "Generate Vision Camera plugin boilerplate",
  "keywords": [
    "react-native",
    "npx",
    "android",
    "ios",
    "camera",
    "vision",
    "plugin",
    "builder"
  ],
  "main": "build",
  "repository": {
    "type": "git",
    "url": "https://github.com/mateusz1913/vision-camera-plugin-builder.git"
  },
  "homepage": "https://github.com/mateusz1913/vision-camera-plugin-builder",
  "author": "Mateusz MÄ™drek <luigimario1913@gmail.com> (https://github.com/mateusz1913)",
  "license": "MIT",
  "bin": "bin/vision-camera-plugin-builder",
  "files": [
    "build"
  ],
  "scripts": {
    "prepack": "yarn run clean && yarn run build:prod",
    "build": "ncc build ./src/index.ts -o build/",
    "build:prod": "ncc build ./src/index.ts -o build/ --minify --no-cache --no-source-map-register",
    "clean": "rm -rf ./build/",
    "lint": "eslint .",
    "release": "release-it",
    "watch": "tsc --watch --preserveWatchOutput",
    "watch:ncc": "yarn run build -w"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "17.7.0",
    "@evilmartians/lefthook": "1.4.9",
    "@release-it/conventional-changelog": "7.0.0",
    "@types/glob": "8.1.0",
    "@types/prompts": "2.4.4",
    "@types/yargs": "17.0.24",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "@vercel/ncc": "0.36.1",
    "commitlint": "17.7.1",
    "eslint": "8.48.0",
    "eslint-plugin-import": "2.28.1",
    "kleur": "4.1.5",
    "ora": "7.0.1",
    "prompts": "2.4.2",
    "release-it": "16.1.5",
    "typescript": "5.2.2",
    "xcode": "3.0.1",
    "yargs": "17.7.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "packageManager": "yarn@3.6.3"
}
