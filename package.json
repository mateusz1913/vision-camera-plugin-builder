{
  "name": "vision-camera-plugin-builder",
  "version": "0.5.0",
  "description": "Generate Vision Camera plugin boilerplate",
  "keywords": [
    "react-native",
    "npx",
    "android",
    "ios",
    "camera",
    "vision",
    "plugin",
    "builder"
  ],
  "main": "build",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateusz1913/vision-camera-plugin-builder.git"
  },
  "homepage": "https://github.com/mateusz1913/vision-camera-plugin-builder",
  "author": "Mateusz MÄ™drek <luigimario1913@gmail.com> (https://github.com/mateusz1913)",
  "license": "MIT",
  "bin": "bin/vision-camera-plugin-builder",
  "files": [
    "build"
  ],
  "scripts": {
    "prepack": "yarn run clean && yarn run build:prod",
    "build": "ncc build ./src/index.ts -o build/",
    "build:prod": "ncc build ./src/index.ts -o build/ --minify --no-cache --no-source-map-register",
    "clean": "rm -rf ./build/",
    "lint": "eslint .",
    "release": "release-it",
    "watch": "tsc --watch --preserveWatchOutput",
    "watch:ncc": "yarn run build -w",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "18.4.4",
    "@evilmartians/lefthook": "1.5.5",
    "@release-it/conventional-changelog": "8.0.1",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.11",
    "@types/prompts": "2.4.9",
    "@types/yargs": "17.0.32",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "@vercel/ncc": "0.38.1",
    "commitlint": "18.4.4",
    "eslint": "8.56.0",
    "eslint-plugin-import": "2.29.1",
    "jest": "29.7.0",
    "kleur": "4.1.5",
    "memfs": "4.6.0",
    "ora": "8.0.1",
    "prompts": "2.4.2",
    "release-it": "17.0.1",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "xcode": "3.0.1",
    "yargs": "17.7.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "packageManager": "yarn@4.0.2"
}
