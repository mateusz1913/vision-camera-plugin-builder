{
  "name": "vision-camera-plugin-builder",
  "version": "0.1.1",
  "description": "Generate Vision Camera plugin boilerplate",
  "keywords": [
    "react-native",
    "npx",
    "android",
    "ios",
    "camera",
    "vision",
    "plugin",
    "builder"
  ],
  "main": "build",
  "repository": {
    "type": "git",
    "url": "https://github.com/mateusz1913/vision-camera-plugin-builder.git"
  },
  "homepage": "https://github.com/mateusz1913/vision-camera-plugin-builder",
  "author": "Mateusz MÄ™drek <luigimario1913@gmail.com> (https://github.com/mateusz1913)",
  "license": "MIT",
  "bin": {
    "vision-camera-plugin-builder": "bin/vision-camera-plugin-builder"
  },
  "files": [
    "build",
    "generateIOS.rb"
  ],
  "scripts": {
    "prepare": "yarn run clean && yarn run build:prod",
    "build": "ncc build ./src/index.ts -o build/",
    "build:prod": "ncc build ./src/index.ts -o build/ --minify --no-cache --no-source-map-register",
    "clean": "rm -rf ./build/",
    "lint": "eslint .",
    "release": "release-it",
    "watch": "tsc --watch --preserveWatchOutput",
    "watch:ncc": "yarn run build -w"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@commitlint/config-conventional": "^17.0.3",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/glob": "^7.2.0",
    "@types/prompts": "^2.0.14",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vercel/ncc": "^0.34.0",
    "commitlint": "^17.0.3",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "kleur": "^4.1.5",
    "ora": "5.4.1",
    "prompts": "^2.4.2",
    "release-it": "^15.1.1",
    "typescript": "^4.7.4",
    "yargs": "^17.5.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "hooks": {
      "after:release": "git checkout -b releases/v_${version} && git push -u origin releases/v_${version}"
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "push": false
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
